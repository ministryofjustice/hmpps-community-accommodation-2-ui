{%- from "moj/components/sub-navigation/macro.njk" import mojSubNavigation -%}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% from "../../partials/showErrorSummary.njk" import showErrorSummary %}
{% from "../../partials/documentSummaryList.njk" import documentSummaryList %}
{% from "../../components/printButton/macro.njk" import printButtonScript,
printButton %}

{% extends "../../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + pageHeading  %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">

      <h1 class="govuk-heading-xl govuk-!-margin-bottom-5">
        Application answers
      </h1>

      <p class="govuk-body-l">This page contains answers submitted as part of a CAS-2 application. Alternatively, you can download a PDF version of this page.</p>

      {{ printButton() }}
    </div>

    <div class="govuk-grid-column-full">
      <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

      <div id="application-summary">
        <h2 class="govuk-heading-l">
          Application summary
        </h2>

        <ul class="govuk-list govuk-list--spaced">
          <li>
            <span class="govuk-!-font-weight-bold">Applicant name: </span>{{ application.person.name }}</li>
          <li>
            <span class="govuk-!-font-weight-bold">Prison number: </span>{{ application.person.nomsNumber }}</li>
          <li>
            <span class="govuk-!-font-weight-bold">Referrer name: </span>{{ application.submittedBy.name }}</li>
          {% if application.submittedBy.email %}
            <li>
              <span class="govuk-!-font-weight-bold">Contact email address:</span>
              {{ application.submittedBy.email }}
            </li>
          {% endif %}
        </ul>
      </div>

      <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

      {% if application.document.sections | length %}
        {{ documentSummaryList(application) }}
      {% endif %}
    </div>
  </div>

{% endblock %}

{% block extraScripts %}
  {{ printButtonScript(cspNonce) }}
{% endblock %}