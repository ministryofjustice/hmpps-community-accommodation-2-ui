{% from "../../../components/formFields/form-page-input/macro.njk" import formPageInput %}

{% extends "../layout.njk" %}
{% block questions %}
  <span class="govuk-caption-l">{{ page.title }}</span>
  <h1 class="govuk-heading-l">{{ page.questions.whiteBackground }}</h1>

  {% set optionalWhiteBackground %}
    {{
      formPageInput(
        {
          label: { text: page.questions.optionalWhiteBackground},
          classes: "govuk-input--width-20",
          fieldName: "optionalWhiteBackground"
        },
        fetchContext()
      )
    }}
  {% endset -%}

  {{
    formPageRadios(
      {
        fieldName: "whiteBackground",
        fieldset: {
          legend: {
            text: page.questions.whiteBackground,
            isPageHeading: false,
            classes: "govuk-fieldset__legend--m"
          }
        },
        items: page.items(optionalWhiteBackground)
      },
      fetchContext()
    )
  }}
{% endblock %}