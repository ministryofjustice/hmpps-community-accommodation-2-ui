{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "../../../components/formFields/form-page-date-input/macro.njk" import formPageDateInput %}

{% extends "../layout.njk" %}

{% set expiryDate %}
        {{ 
          formPageDateInput( {
            hint: {
              text: page.questions.expiryDate.hint
            },
            fieldName: "expiryDate",
            fieldset: {
              legend: {
                text: page.questions.expiryDate.question,
                classes: "govuk-fieldset__legend--m"
              }
            },
            items: dateFieldValues('expiryDate', errors)
            }, 
            fetchContext()) 
        }}
{% endset %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="{{ columnClasses | default("govuk-grid-column-two-thirds") }}">
      <h1 class="govuk-heading-l govuk-!-margin-bottom-4">{{ page.title }}</h1>
      <p class="govuk-body">An Assessment, Care in Custody and Teamwork (ACCT) 
          is a tailored plan to support someone in prison at risk of self harm or suicide.</p>
      <form id="form" action="{{ paths.applications.appendToList({ id: applicationId, task: page.taskName, page: page.name }) }}?_method=PUT" method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

        {{ showErrorSummary(errorSummary) }}

        {{ 
          formPageDateInput( {
            fieldName: "createdDate",
            hint: {
              text: page.questions.createdDate.hint
            },
            fieldset: {
              legend: {
                text: page.questions.createdDate.question,
                classes: "govuk-fieldset__legend--m"
              }
            },
            items: dateFieldValues('createdDate', errors)
            }, 
            fetchContext()) 
          }}

        {{
          formPageRadios(
            {
              fieldName: "isOngoing",
              fieldset: {
                legend: {
                  text: page.questions.isOngoing.question,
                  classes: "govuk-fieldset__legend--m"
                }
              },
              items: [
              {
                value: "yes",
                text: "Yes"
              },
              {
                value: "no",
                text: "No",
                conditional: {
                  html: expiryDate
                }
              }
            ]
            },
            fetchContext()
          )
        }}

        {{
            formPageInput(
              {
                label: { 
                  text: page.questions.referringInstitution.question,
                  classes: "govuk-label--m" 
                },
                classes: "govuk-input--width-20",
                fieldName: "referringInstitution",
                hint: {
                  text: page.questions.referringInstitution.hint
                }
              },
              fetchContext()
            )
        }}

        {{
            formPageTextArea(
              {
                fieldName: "acctDetails",
                label: {
                  text: page.questions.acctDetail.question,
                  classes: "govuk-label--m"
                }
              },
              fetchContext()
            )
        }}

        <div>
          {{ govukButton({
            id: "add-another",
            text: "Save and add another",
            classes: "govuk-button--secondary"
          }) }}
        </div>

        {% block button %}

          {{ govukButton({
                text: "Save and add ACCT"
            }) }}

        {% endblock %}
      </form>
    </div>
  </div>

{% endblock %}

{% block extraScripts %}
  <script type="text/javascript" nonce="{{ cspNonce }}">
    function addRedirect(event) {
      const form = document.getElementById('form')
      form.action = form.action + '&redirectPage=acct-data'
    }

    document.addEventListener('DOMContentLoaded', function () {
      document
        .getElementById('add-another')
        .addEventListener('click', (event) => addRedirect(event));
    });
  </script>
{% endblock %}